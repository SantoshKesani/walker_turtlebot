<launch>
  <arg name= "Recorder" default= "false" />

  <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_house.launch" />
  
  <node name="walker" pkg="walker_turtlebot" type="walker_turtlebot" output ="screen" />

  <node if = "$(arg Recorder)" pkg= "rosbag" name= "record_bag" type= "record"	args = "-a -O $(find walker_turtlebot)/results/recorder.bag --exclude '/camera/*'" />

</launch>